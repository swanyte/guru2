<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".ShopHome">

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingHorizontal="15dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/shopHome_name"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="가나다 공릉점"
            android:textSize="20dp"/>

        <ImageButton
            android:id="@+id/shop_my_page"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/mypage" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="가게 오픈"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:textOff="영업종료"
            android:textOn="영업중"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="메뉴 추가"/>

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/colorPrimary"
            android:text="+"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:layout_marginHorizontal="8dp"
            android:onClick="mOnPopupClick"
            />

        <Button
            android:id="@+id/droneclick"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="120dp"
            android:background="@color/colorPrimary"
            android:text="Drone"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/shop_home_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/corner_radius_gray_line"/>

</LinearLayout>