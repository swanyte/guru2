<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="116dp"
        android:layout_height="96dp"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_gravity="right"
        android:layout_marginHorizontal="30dp">

        <Button
            android:id="@+id/change_password_find"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:background="#00FF0000"
            android:text="비밀번호 찾기"
            android:textSize="12dp"
            android:textColor="@color/colorG3"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="30dp">

        <EditText
            android:id="@+id/username_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="16dp"
            android:background="@drawable/corner_radius_gray_line"
            android:textSize="14dp"
            android:hint="이메일" />

        <EditText
            android:id="@+id/password_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="16dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/corner_radius_gray_line"
            android:inputType="textPassword"
            android:textSize="14dp"
            android:hint="비밀번호" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="50dp">

        <Button
            android:id="@+id/button_login"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:background="@drawable/corner_radius3_blue"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:text="로그인하기" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="95dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="계정이 없으신가요?"
            android:textSize="12dp"/>

        <Button
            android:id="@+id/change_user_start"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:background="#00FF0000"
            android:text="사용자로 가입하기"
            android:layout_marginHorizontal="5dp"
            android:textSize="12dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="/"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/change_shop_start"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:background="#00FF0000"
            android:text="업체로 가입하기"
            android:textSize="12dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>